extends layout
block content
    .row.page-header
        .col-lg-12
            h1= title
    .row
        .col-xs-12.col-md-8
            .row
                .col-xs-12.col-sm-8
                    .panel.panel-primary
                        .panel-heading
                        .panel-body
                            each exhibitor in exhibitorsList
                                .row
                                    .col-xs-4
                                        img(src=exhibitor.imageOf)
                                    .col-xs-8
                                        a(href='/exhibitors-info/') #{exhibitor.nameOf}
                                hr
                    a.btn.btn-warning( href="/conference/" ) Back to Conference
